{
  "compilerOptions": {
    "module": "commonjs",
    "moduleResolution": "node",
    "pretty": true,
    "rootDir": "./lib",
    "sourceMap": true,
    "target": "es6",
    "outDir": "./dist",
    "baseUrl": "./lib",
    "resolveJsonModule": true,
    "plugins": [
      { "name": "typescript-tslint-plugin" }
    ],
    "lib": ["es2017"]
  },
  "include": [
    "lib/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}